FROM node:20-alpine

WORKDIR /app

# Copy entire monorepo
COPY . .

# Install workspace deps
RUN npm install

# ðŸ”¥ Build all packages (so @repo/db/dist exists)
RUN npm run build

# ðŸ”¥ðŸ”¥ðŸ”¥ Generate Prisma INSIDE packages/db
WORKDIR /app/packages/db
RUN npx prisma generate

# Go back to HTTP app
WORKDIR /app/apps/http

EXPOSE 3000

CMD ["npm", "run", "start"]
